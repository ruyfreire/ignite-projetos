// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

model Pet {
  id          String  @id @default(uuid())
  name        String
  age         Int
  size        PetSize
  description String?
}

model Organization {
  id            String @id @default(uuid())
  name          String
  address       String
  city          String
  phone         String
  email         String
  password_hash String
}
